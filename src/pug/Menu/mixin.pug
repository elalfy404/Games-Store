//- Mixin img-bg
mixin img-bg(src,alt)
  img.hs_item.set_bg(
    src= src,
    alt= alt
)&attributes(attributes)

//- Mixin tab-lg News
mixin tab-lg(src,alt,label,a,admin,cl,cm)
  .un_big_item.set_tab
    img.img(src= src,alt= alt)
  .ub_text
    .label
      span= label
    h5
      a(href="#")= a
    ul
      li by
        span= admin
      li
        i.far.fa-clock
        = cl
      li
        i.far.fa-comment
        = cm

//- Mixin tab News
mixin tab(src,alt,label,a,cl,cm)
  .un_big_item.set_tab
    img.img(src= src,alt= alt)
    .label
      span= label
  .ub_text
    h6
      a(href="#")= a
    ul
      li
        i.far.fa-clock
        = cl
      li
        i.far.fa-comment
        = cm

//- Mixin  preview

mixin item-pre(src,alt,label,a,clock,comment)
  .set_bg.lp_pic
    img(src= src, alt= alt)
    .review_loader.charts_container
      svg(viewBox='-1 0 38 45')
        circle.progressbar_track(cx='20' cy='20' r='20')
        circle.progressbar_thumb.progressbar__thumb--track-1(cx='20' cy='20' r='20')
        circle.progressbar_thumb.progressbar__thumb--track-2(cx='20' cy='20' r='20')
        circle.progressbar_thumb.progressbar__thumb--track-3(cx='20' cy='20' r='20')
      .loader_circle.pie_wrapper
        span.label= label
  .lp_text
    h6
      a(href="#")= a
    ul
      li
        i.far.fa-clock= clock
      li
        i.far.fa-comment= comment

