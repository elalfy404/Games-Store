//- Mixin Videos 

mixin vid(src,alt,h5)
  .large.set_bg
    img(src= src, alt= alt)
    button(type="button").play_btn.video_popup(id!=attributes.id)
      i.fas.fa-play
  .vg_text
    h5(class!=attributes.class)= h5

