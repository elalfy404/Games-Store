    svg(viewBox='-1 0 38 45')
      circle.progressbar_track(cx='20' cy='20' r='20')
      circle.progressbar__thumb--track-1(cx='20' cy='20' r='20')(class!=attributes.class)
      circle.progressbar__thumb--track-2(cx='20' cy='20' r='20')(class!=attributes.class)
